<div class="container">
  <div class="row">
    <div class="col-2 mt-3 text-center">
      <h5>管理者ログイン</h5>
    </div>
    <div class="col-7">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :氏名 %><br>
        <%= f.text_field :name, class: "p-1 mb-3" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-1 mb-3" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "p-1 mb-3" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン情報を保存 %>
      </div>
      <% end %>

      <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-outline-warning mt-3" %>
      </div>
      <% end %>

      <%#= render "admin/shared/links" %>
    </div>
  </div>
</div>
