<div class="container">
    <div class="row">
        <div class="mt-5 p-1 alert-secondary col-4 text-center">
          <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
          <h5><%= @user.name %><%= @user.nickname %>さんの会員情報編集</h5>
          <% end %>
        </div>
    </div>

    <div class="row">
      <div class="col-12 mt-5">
        <body>
        <%= form_with model: @user, method: :patch, url: admin_user_path(@user) do |f| %>
        <table>
            <tr>
              <td class="w-40 p-2"><label for="inputName">アカウント名</label></dr>
              <td class="pl-5"><%= f.text_field :name, autofocus: true, id:"@user", placeholder:"アカウント名" %></td>
            </tr>

            <tr>
              <td class="w-40 p-2"><label for="inputName">ニックネーム</label></td>
              <td class="pl-5"><%= f.text_field :nickname, autofocus: true, id:"@user", placeholder:"ニックネーム" %></td>
            </tr>

            <tr>
              <td class="w-40 p-2"><label for="inputName">電話番号</label></td>
              <td class="pl-5"><%= f.text_field :telephone_number, autofocus: true, id:"@user", placeholder:"電話番号" %></td>
            </tr>

            <tr>
              <td class="w-40 p-2"><label for="inputName">メールアドレス</label></td>
              <td class="pl-5"><%= f.text_field :email, autofocus: true, id:"@user", placeholder:"メールアドレス" %></td>
            </tr>
        </table>
        <%= f.submit "変更を保存する", class: "btn btn-outline-warning p-2 mt-4 mb-5" %>
        <% end %>
      <div>
    </div>
</div>

