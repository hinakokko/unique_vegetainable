<div class="container">
    <div class="row">
       <table>
            <div class="mt-5 p-1 col-4">
            <h5>@<%= @user.name %> ( <%= @user.nickname %> ) さんの会員詳細</h5>
            </div>
       </table>
    </div>

  <div class="row">
    <div class="col-8">
     <body>
        <table class="mt-5 w-50 text-center border">
            <tr>
              <th class="py-2 border"><%= link_to "レビュー詳細", admin_user_vegetainable_review_path(@user) %></th>
              <td class="border"></td>
            </tr>
            <tr>
                <th class="py-2 border">会員ID</th>
                <td class="border"><%= @user.id %></td>
            </tr>
            <tr>
                <th class="p-2 border">アカウント名</th>
                <td class="border">@<%= @user.name %></td>
            </tr>
            <tr>
                <th class="p-2 border">ニックネーム</th>
                <td class="border"><%= @user.name %></td>
            </tr>
             <tr>
                <th class="p-2 border">電話番号</th>
                <td class="border"><%= @user.telephone_number %></td>
            </tr>
             <tr>
                <th class="p-2 border">メールアドレス</th>
                <td class="border"><%= @user.email %></td>
            </tr>
            <tr>
                <th class="p-2 border">会員ステータス</th>
                <td class="border"><%= @user.is_active %></td>
            </tr>
            <tr>
                <th class="p-2 border">会員登録日</th>
                <td class="border"><%= @user.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
        </table>

         <div class="mt-3 p-5 col-11">
          <tr>
            <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-outline-warning p-2 mr-4 mb-5" %>
          </tr>
          <tr>
            <%= link_to "<< レビュー一覧へ戻る", admin_users_path, class: "btn btn-outline-warning p-2 mr-4 mb-5" %>
          </tr>
         </div>
      </body>
    </div>
  </div>
  <div class="row">
    <div class="col-7 border-top pt-5">
      <h5 class="pb-5">@<%= @user.name %> ( <%= @user.nickname %> ) さんのレビュー投稿一覧</h5>
      <% @reviews.each do |review| %>
        <tr>
          <th>レビュー投稿日：</th>
          <td><%= review.created_at.strftime('%Y/%m/%d') %><br></td>
        </tr>
        <tr>
          <th>レビューID：</th>
          <td><%= review.id %><br><br></td>
        </tr>
        <tr>
          <th>タイトル：</th>
          <td><%= review.title %><br><br></td>
        </tr>
        <tr>
          <th>レビュー内容：</th>
          <td><%= review.caption %><br><br></td>
        </tr>
        <tr>
          <th>種類：</th>
          <td><%= review.name %><br><br></td>
        </tr>
        <tr>
          <th>産地：</th>
          <td><%= review.area %><br><br></td>
        </tr>
        <tr>
          <th>農家：</th>
          <td><%= review.farmer_name %><br><br></td>
        </tr>
        <tr>
          <th>販売先：</th>
          <td><%= review.shop_name %><br><br></td>
        </tr>

      <% end %>

    </div>
  </div>
  <footer class="pl-5 pt-3 w-50 col-12 pb-5 text-center">
        <%= paginate @review %>
        </footer>
</div>
