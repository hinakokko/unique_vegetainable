<div class="container">
    <div class="row">
       <table>
            <div class="mt-5 p-1 text-center alert-secondary col-2 mb-">
            <h5>会員一覧</h5>
            </div>
       </table>

        <body>
        <table class="mt-3 w-50 text-left table table-striped col-12">
            <tr>
                <th class="pl-5 col-2">会員ID</th>
                <th class="col-2">アカウント名</th>
                <th class="col-2">ニックネーム</th>
                <th class="col-2">メールアドレス</th>
                <th class="col-2">電話番号</th>
            </tr>
        </table>

        <% @users.each do |user| %>
        <table class="mt-2 mb-2 w-50 text-left border-top col-12">
            <tr>
                <td class="pl-5 pt-2 pb-2 col-2"><%= user.id %></td>
                <td class="col-2 text-center"><%= link_to user.name, admin_users_path(user.id) %></td>
                <td class="col-2 text-center"><%= link_to user.nickname, admin_users_path(user.id) %></td>
                <td class="col-2 text-center"><%= link_to user.email, admin_users_path(user.id) %></td>
                <td class="text-center col-2"><%= user.telephone_number %></td>
            </tr>
        </table>
        <% end %>
        </body>

        <footer class="pl-5 border-top pt-3 w-50 col-12 pb-5 text-center">
        <%= paginate @user %>
        </footer>
  </div>
</div>