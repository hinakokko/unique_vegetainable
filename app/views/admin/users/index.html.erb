<div class="container">
    <div class="row">
       <table>
            <div class="mt-5 p-1 text-center alert-secondary col-2 mb-">
            <h5>会員一覧</h5>
            </div>
       </table>

        <body>
        <table class="mt-3 w-50 text-left table table-striped col-12">
            <tr>
                <th class="pl-5 col-1">会員ID</th>
                <th class="col-1">アカウント名</th>
                <th class="col-1">ニックネーム</th>
                <th class="col-1">メールアドレス</th>
                <th class="col-1">電話番号</th>
                <th class="col-1">会員登録日</th>
                <th class="col-1">会員ステータス</th>
            </tr>
        </table>

        <% @users.each do |user| %>
        <table class="mt-2 mb-2 w-50 text-left border-top col-12">
            <tr>
                <td class="pl-5 pt-2 pb-2 col-1"><%= user.id %></td>
                <td class="col-1 text-center"><%= link_to user.name, admin_user_path(user.id) %></td>
                <td class="col-1 text-center"><%= user.nickname %></td>
                <td class="col-1 text-center"><%= user.email %></td>
                <td class="col-1 text-center"><%= user.telephone_number %></td>
                <td class="col-1 text-center"><%= user.created_at.strftime('%Y/%m/%d') %></td>
                <td class="col-1 text-center"><%= user.is_active %></td>
            </tr>
        </table>
        <% end %>
        </body>

        <footer class="pl-5 border-top pt-3 w-50 col-12 pb-5 text-center">
        <%= paginate @user %>
        </footer>
  </div>
</div>