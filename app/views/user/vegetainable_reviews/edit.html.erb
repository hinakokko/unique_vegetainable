<div clas="container">
  <div class="row">
    <div class="mx-auto">


   <h2 class="col-5 mt-5 alert-secondary mb-5 p-2 text-center">投稿したレビューを編集する</h2>

    <body class="m-5">
    <%= form_with model: @vegetainable_review, method: :patch, url: vegetainable_review_path(@vegetainable_review) do |f| %>

    <table class="mb-3 pr-5 center-block">
    <tr>
      <td><label for="inputImage">画像</label></td>
      <td><%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %> </td>
    </tr>
    </table>

    <table class="mt-3">
    <tr>
      <td><label for="inputName">購入した野菜</label></td>
      <td><%= f.text_field :name, autofocus: true, id:"@vegetainable_review", placeholder:"購入した野菜の名前" %></td>
    </tr>
    </table>

    <table class="mt-3">
      <tr>
      <td><label for="inputName">レビュー記入欄</label></td>
      <td><%= f.text_field :text, autofocus: true, id:"inputName", placeholder:"レビュー記入欄" %></td>
    </tr>
    </table>

    <table class="mt-3">
      <tr>
      <td><label for="inputName">税抜価格</label></td>
      <td><%= f.text_field :price, autofocus: true, id:"inputName", placeholder:"税抜価格" %>円</td>
    </tr>
    </table>

    <div class="mt-5 p-10 w-15 m-5 p-5">
      <%= f.submit "変更を保存", class: "btn-success p-3 rounded" %>
    </div>

    <% end %>
    </body>
  </div>
  </div>
</div>
