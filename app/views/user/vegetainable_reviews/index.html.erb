<div class="container">
  <div class="row">
    <div class="col-5">
    <h2 class="p-2 text-center">レビュー投稿一覧</h2>

      <%= form_tag vegetainable_reviews_path, method: :get, class: 'boards__searchForm' do %>
      <%= select_tag :tag_id,
                     options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
                     {
                       prompt: 'タグで絞り込み検索',
                       onchange: 'submit(this.form);'
                     }
      %>
    <% end %>
    </div>
    </div>

    <div class="row">
      <% @vegetainable_reviews.each do |vegetainable_review| %>
      <tbody>
        <table class="col-4">
            <tr>
                <th>
                  <%= link_to vegetainable_review_path(vegetainable_review.id) do %>
                    <% if vegetainable_review.image.attached? %>
                    <%= image_tag vegetainable_review.image, size: "170x200" %>
                    <% else %>
                    <%= image_tag 'no_image', size: "170x200" %>
                    <% end %>
                  <% end %>
                </th>
            </tr>
        </table>

        <table class="col-6">
            <tr>
              <th class="p-3"><%= vegetainable_review.title %></th>
            <tr>
            <tr>
              <td class="p-6 mb-10"><%= vegetainable_review.caption %></td>
            </tr>
        </table>
 

    <tfooter>
    <tr>
      <td class="m-10"><%= link_to "もう一度レビューを投稿する", new_vegetainable_review_path, class: "btn btn-primary"%></td>
    </tr>
    </tfooter>
    </div>

    <% end %>
  </div>
</div>