<div class="container">
  <div class="row">
    <div class="col-md-6">
    <tr>
      <td>
      <% if @vegetainable_review.errors.any? %>
      <%= @vegetainable_review.errors.count %>件のエラーが発生しました
      <td>
    </tr>
    <tr>
      <td>
        <ul>
          <% @vegetainable_review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
          <% end %>
      </td>
    </tr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
    <tr>
      <td><h4 class="pt-5 pb-5">レビュー投稿フォーム</h4></td>
    </tr>
    </div>
  </div>

  <%= form_with model: @vegetainable_review do |f| %>
  <div class="row">
    <div class="col-md-6">
      <p>レビュータイトル</p>
      <%= f.text_field :title, placeholder:"*入力必須", class:"p-2 w-75 mb-4"  %>
      <p>購入した野菜</p>
      <%= f.text_field :name, placeholder:"*入力必須", class:"p-2 w-75 mb-4" %>
      <p>産地</p>
      <%= f.text_field :area, placeholder:"例：〇〇県産", class:"p-2 w-75 mb-4" %>
      <p>購入価格</p>
      <%= f.text_field :price, placeholder:"*1点あたりの購入金額", class:"p-2 w-75 mb-4" %>円
      <p>個数</p>
      <%= f.text_field :amount, placeholder:"*1点あたりの個数", class:"p-2 w-75 mb-4" %>個入り
      <p>農家</p>
      <%= f.text_field :farmer_name, placeholder:"例：〇〇ファームなど", class:"p-2 w-75 mb-4" %>
      <p>購入先</p>
      <%= f.text_field :shop_name, placeholder:"例：〇〇の道の駅など", class:"p-2 w-75 mb-4" %>
      <p>画像</p>
      <%= f.file_field :image, accept: "image/*", class:"p-2 w-100 mb-4" %>
      <p>レビュー記入欄</p>
      <%= f.text_area :caption, placeholder:"*入力必須", class:"p-2 w-100 mb-4" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 m-3">
      <p>＃ハッシュタグ登録</p>
      <div class="check_box p-3 w-50 border mt-4 mb-5">
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
           <%= tag.label do %>
             <%= tag.check_box %>
             <%= tag.text %>
           <% end %>
       <% end %>
       </div>
       <tr>
         <td>
           <%= f.submit 'レビューを投稿する', class: "btn btn-success p-2 mt-2 mb-5" %>
         </td>
       </tr>
       <tr>
         <td><%= link_to " << レビューの一覧へ戻る", vegetainable_reviews_path, class: "btn btn-warning p-2 mr-4 mt-2 mb-5"%></td>
       </tr>
    </div>
  </div>
  <% end %>
</div>