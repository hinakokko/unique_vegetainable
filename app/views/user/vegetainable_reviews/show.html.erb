<div clas="container">
  <div class="row">
    <h2 class="mx-auto mb-10 ml-5 alert-secondary p-2 text-center">レビュー投稿一覧</h2>

    <%= form_with model: @vegetainable_review, method: :patch, url: vegetainable_review_path do |f| %>
    <div class="col-4 mt-5">
    <table>
      <tr>
        <th class="border border-3 p-2">レビュータイトル</th>
        <td class="border border-3"><%= @vegetainable_review.title %></td>
      </tr>
      <tr>
        <td>
          <% if @vegetainable_review.image.attached? %>
          <%= image_tag @vegetainable_review.image, size: "200x300" %>
          <% else %>
          <%= image_tag 'no_image', size: "170x200" %>
          <% end %>
          </td>
      </tr>
      <tr>
      <td class="border border-3"><%= @vegetainable_review.caption %></td>
    </tr>
    </table>
    </div>

      <table class="col-7 mb-3 ml-5 w-100">
    <tbody>
       <tr>
        <td class="border border-3 p-2">購入した野菜</td>
        <td class="border border-3"><%= @vegetainable_review.name %></td>
      </tr>
      <tr>
        <td class="border border-3 p-2">産地</td>
        <td class="border border-3"><%= @vegetainable_review.area %></td>
      </tr>
      <tr>
        <td class="border border-3 p-2">購入価格</td>
        <td class="border border-3"><%= @vegetainable_review.price %></td>
      </tr>
      <tr>
        <td class="border border-3 p-2">個数</td>
        <td class="border border-3"><%= @vegetainable_review.amount %></td>
      </tr>
      <tr>
        <td class="border border-3 p-2">農家</td>
        <td class="border border-3"><%= @vegetainable_review.farmer_name %></td>
      </tr>
      <tr>
        <td class="border border-3 p-2 w-40">購入先</td>
        <td class="border border-3"><%= @vegetainable_review.shop_name %></td>
      </tr>
    </tbody>
    </table>
    <% end %>
  </div>

    <tr>
      <td><%= link_to "もう一度レビューを投稿する", new_vegetainable_review_path, class: "btn btn-primary"%></td>
    </tr>
    <tr>
       <td><%= link_to "レビューの一覧", vegetainable_reviews_path, class: "btn btn-primary"%></td>
    </tr>

  </div>
</div>