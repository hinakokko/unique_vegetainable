<h2>初めての方へ<br>新規登録はこちら</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>

  <%= render "user/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.label :ニックネーム %><br>
  <%= f.text_field :nickname %>
  </div>

  <div class="field">
  <%= f.label :アカウント名 %><br>
  <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.label :電話番号 %><br>
  <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :再パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "user/shared/links" %>
