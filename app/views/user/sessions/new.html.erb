<div class="container">
  <div class="row">
    <div class="col-2"><h5>会員の方へ<br>ログインはこちら</h5></div>
    <div class="col-7">
      <%= form_with model: @user, url: user_session_path do |f| %>

      <div class="field">
        <%= f.label :アカウント名 %><br>
        <%= f.text_field :name, class: "p-1 mb-3" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-1 mb-3" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "p-1 mb-3" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン情報を保存 %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-outline-warning mt-3" %>
      </div>
        <% end %>
      <%#= render "user/shared/links" %>
    </div>
  </div>
</div>


